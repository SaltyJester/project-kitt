<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name="android:statusBarColor">?attr/colorPrimarySurface</item>
        <item name="actionBarTheme">@style/Theme.MaterialComponents.DayNight.Bridge</item>
    </style>
    <style name = "AppThemeNoActionBar" parent = "Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name = "android:windowActionBar">false</item>
        <item name = "android:statusBarColor">?attr/colorPrimarySurface</item>
        <item name = "android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name = "android:windowNoTitle">true</item>
    </style>

    <style name="LightTheme" parent="AppTheme">

        <item name="bgColor">#ffffff</item>
    </style>

    <style name="DarkTheme" parent="AppTheme">

        <item name="bgColor">#494949</item>
    </style>
</resources>